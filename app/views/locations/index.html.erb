<%= render 'shared/topbar' %>

<div class="content-wrapper">

  <div class="container">
    <div class="row">
      <div class="col-12">
        <% @locations.each do |location| %>
          <div class="location-header">
            <div class="darktitle">
              <%= location.name %>
            </div>
            <div class="d-flex">
              <%= location.category %>
              <%= location.brightness %>
            </div>
          </div>
          <div class="card card-location">
            <div class="carousel">
              <ul class="carousel-container" id="sortable" >
                <% location.ownerships.each do |ownership| %>
                  <li class="card card-plant-small">
                    <%= ownership.plant.name %>
                  </li>
                <% end %>
              </ul>
            </div>
            <%= link_to plants_path do %>
              <div class= "button add-plant" >
                <i class="fas fa-plus"></i>
                <%# <div class="greytext bottom-bar-text"></div> %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Button trigger modal -->
      <div class="button add-location" data-toggle="modal" data-target="#newLocationModal">
        <i class="fas fa-plus"></i>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/bottombar' %>

<!-- Modal -->
<div class="modal fade" id="newLocationModal" tabindex="-1" role="dialog" aria-labelledby="newLocationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content card">
      <div class="modal-header">
        <h5 class="fatdarktitle" id="newLocationModalLabel">Add a location</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'location-form', location: @location %>
      </div>
    </div>
  </div>
</div>