<%= render 'shared/topbar' %>

<div class="content-wrapper">

  <div class="container">
    <div class="row">
      <div class="col-12">
        <% @locations.each do |location| %>
          <div class="location-header">
            <div class="darktitle">
              <%= location.name %>
            </div>
            <div class="d-flex">
              <%= location.category %>
              <%= location.brightness %>
            </div>
          </div>
          <div class="card card-location">
            <div class="carousel">
              <ul class="carousel-container" id="sortable" >
                <% location.ownerships.each do |ownership| %>
                  <li class="card card-plant-small">
                    <%= ownership.plant.name %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Button trigger modal -->
      <div class="button-add" data-toggle="modal" data-target="#newLocationModal">
        <i class="fas fa-plus"></i>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/bottombar', datasource: @datasource %>

<!-- Modal -->
<div class="modal fade" id="newLocationModal" tabindex="-1" role="dialog" aria-labelledby="newLocationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newLocationModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'location-form', location: @location %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>