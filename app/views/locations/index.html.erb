<%= render 'shared/topbar' %>

<div class="content-wrapper">

  <div class="container">
    <div class="row">
      <div class="col-12">

        <% @locations.each do |location| %>
          <div class="location-header">
            <div class="darktitle">
              <%= location.name %>
            </div>
            <div class="d-flex">
              <%= location.category %>
              <%= location.brightness %>
            </div>
          </div>
          <div class="card card-location">
            <div class="carousel">
              <ul class="carousel-container sortable" >
                <% location.ownerships.each_with_index do |ownership, index| %>
                  <li>
                     <!-- Button trigger modal -->
                    <div data-toggle="modal" data-target="#newPlantToLocationModalownership.plant<%=index%>">
                      <%= image_tag ownership.plant.image, class: "plant-image-round" %>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="newPlantToLocationModalownership.plant<%=index%>" tabindex="-1" role="dialog" aria-labelledby="newPlantToLocationModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content card">
                          <div class="modal-header">
                            <div class="fatdarktitle" id="newPlantToLocationModalLabel"><%= ownership.plant.name %></div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <%= render 'plantowned', plant: ownership.plant, ownership: ownership, index: index %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Button trigger modal -->
      <div class="button" id="add-location" data-toggle="modal" data-target="#newLocationModal">
        <i class="fas fa-plus"></i>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/bottombar' %>

<!-- Modal -->
<div class="modal fade" id="newLocationModal" tabindex="-1" role="dialog" aria-labelledby="newLocationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content card" style="height: auto;">
      <div class="modal-header">
        <div class="fatdarktitle" id="newLocationModalLabel">Add a location</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'location-form', location: @location %>
      </div>
    </div>
  </div>
</div>