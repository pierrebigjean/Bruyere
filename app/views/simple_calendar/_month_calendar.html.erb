<div class="container">
  <div class="simple-calendar">

    <div class="calendar-header">
      <%# <%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view, class: 'button' %>
      <span class="headtitle"><%= t('date.month_names')[start_date.month].capitalize %> <%= start_date.year %></span>
      <%# <%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view, class: 'button' %>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |dates| %>
          <tr>
            <% dates.each do |date| %>
              <%= content_tag :td, class: calendar.td_classes_for(date) do %>
                <% passed_block.call date.day, sorted_events.fetch(date, []) %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
