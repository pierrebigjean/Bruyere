<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="form">

        <div class="headtitle">Mot de passe oubli√©</div>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="darktext" style="margin-bottom: 5px;">
            Votre email
          </div>
          <div class="form-inputs">
            <%= f.input :email,
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <%= f.button :submit, "Nouveau mot de passe", class: "button mb-5" %>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
      </div>
  </div>
</div>

