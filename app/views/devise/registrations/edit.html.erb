<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="form">

        <div class="headtitle">Modifier le profil</div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="darktext" style="margin-bottom: 5px;">
            Email
          </div>
          <%= f.input :email,
                      required: true,
                      label: false,
                      autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>En attente de confirmation de: <%= resource.unconfirmed_email %></p>
          <% end %>

          <div class="darktext" style="margin-bottom: 5px;">
            Nouveau mot de passe
          </div>
          <%= f.input :password,
                      hint: "Laissez vide si vous ne voulez pas modifier",
                      label: false,
                      required: false,
                      input_html: { autocomplete: "nouveau mot de passe" } %>

          <div class="darktext" style="margin-bottom: 5px;">
            Confirmer le mot de passe
          </div>
          <%= f.input :password_confirmation,
                      required: false,
                      label: false,
                      input_html: { autocomplete: "confirmer le mot de passe" } %>

          <div class="darktext" style="margin-bottom: 5px;">
            Mot de passe actuel
          </div>
          <%= f.input :current_password,
                      label: false,
                      required: true,
                      input_html: { autocomplete: "mot de passe actuel" } %>

          <%= f.button :submit, "Mettre à jour", class:"button mb-5" %>
        <% end %>

        <%= link_to "Supprimer le compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr de vouloir supprimer votre compte?" }, method: :delete, class:"button buttonred" %></p>
        
        <%= link_to "Retour", locations_path %>

      </div>
    </div>
  </div>
</div>
